<view class="foot" style="width: 100%;">

    <view class="mapView" style="width: 100%; display:{{!mapViewDisplay?'none':'block'}};">
        <map
                id="map"
                longitude="{{longitude}}"
                latitude="{{latitude}}"
                scale="{{scale}}"
                controls="{{controls}}"
                bindcontroltap="controltap"
                markers="{{markers}}"
                bindmarkertap="markertap"
                polyline="{{polyline}}"
                show-location
                style="width: 100%; height:{{mapHeight}}px;">
        </map>
    </view>

    <view class="operateView" style="width: 100%; font-size:10px; display:{{!operateViewDisplay?'none':'block'}};">
        <button type="default"
                style="display:{{!operationDisplay?'none':'block'}};margin:0px;padding:0px;"
                bindtap="setOperationArea" size="default"> 点击设置作业区</button>
        <button type="primary"
                style="width: 20%; float:left;display:{{operationDisplay?'none':'block'}};"
                bindtap="reSetOperationArea" size="default"> 重设</button> 
        <button type="primary"
                style="width: 40%;float:left;display:{{operationDisplay?'none':'block'}};"
                bindtap="setHeadingAngleAndWidth" size="default">航向角幅宽</button>
         <button type="warn"
                style="width: 40%; float:left;display:{{operationDisplay?'none':'block'}};"
                bindtap="nextAndFinishSetOperationArea" size="default">下一个结束</button> 
        
    </view>

    <view class="setOperateWidthView" style="width: 100%; display:{{!setOperateWidthViewDisplay?'none':'block'}};">
          <label>设置幅宽和航向角</label>
          <input type="number" bindinput="setOperateWidth" placeholder="请在这里输入幅宽"></input>
          <input type="number" bindinput="setHeadingAngle" placeholder="请在这里输入航向角"></input>
          <button type="default" style="width: 70%;" bindtap="finishSetOperateWidthView" size="default">确定</button>
    </view>
<!-- display:{{!navButtonDisplay?'none':'block'} -->
    <view class="navView" style="width: 100%; display:{{!navViewDisplay?'none':'block'}};">
            <!-- <button type="primary"
                    style="width: 20%;float:left; };"
                    bindtap="AirToNavlineDistance" size="default">测试</button> -->
            <button type="primary"
                    style="width: 50%;float:left; };"
                    bindtap="startNavigation" size="default">开始导航</button>
                    <!-- display:{{navButtonDisplay?'none':'block'} -->
            <button type="warn"
                    style="width: 50%;float:left; };"
                    bindtap="finishNavigation" size="default">结束导航</button>
    </view>
</view>

